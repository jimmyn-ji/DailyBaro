<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dailybaro.user.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.dailybaro.user.model.User">
        <id column="uid" jdbcType="BIGINT" property="uid" />
        <result column="account" jdbcType="VARCHAR" property="account" />
        <result column="password" jdbcType="VARCHAR" property="password" />
        <result column="phone" jdbcType="VARCHAR" property="phone" />
        <result column="email" jdbcType="VARCHAR" property="email" />
        <result column="status" jdbcType="TINYINT" property="status" />
        <result column="isdelete" jdbcType="TINYINT" property="isdelete" />
        <result column="energy" jdbcType="INTEGER" property="energy" />
        <result column="avatar" jdbcType="VARCHAR" property="avatar" />
        <result column="wx_openid" jdbcType="VARCHAR" property="wxOpenid" />
        <result column="qq_openid" jdbcType="VARCHAR" property="qqOpenid" />
    </resultMap>

    <sql id="Base_Column_List">
        uid, account, password, phone, email, status, isdelete, energy, avatar, wx_openid, qq_openid
    </sql>

    <!-- 查询所有用户(排除管理员) -->
    <select id="selectAllUsers" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM user
        WHERE isdelete = 0
        ORDER BY uid ASC
    </select>

    <!-- 查询个人信息 -->
    <select id="getMyInfo" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM user
        WHERE uid = #{uid} AND isdelete = 0
    </select>

    <!-- 根据账号查询用户 -->
    <select id="selectByAccount" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM user
        WHERE account = #{account}
    </select>

    <!-- 插入新用户 -->
    <insert id="insertUser" parameterType="com.dailybaro.user.model.User" useGeneratedKeys="true" keyProperty="uid">
        INSERT INTO user
            (account
            <if test="password != null">, password</if>
            <if test="wxOpenid != null">, wx_openid</if>
            <if test="qqOpenid != null">, qq_openid</if>
            <if test="phone != null">, phone</if>
            <if test="email != null">, email</if>
            , status
            , isdelete
            , energy)
        VALUES
            (#{account}
            <if test="password != null">, #{password}</if>
            <if test="wxOpenid != null">, #{wxOpenid}</if>
            <if test="qqOpenid != null">, #{qqOpenid}</if>
            <if test="phone != null">, #{phone}</if>
            <if test="email != null">, #{email}</if>
            , #{status}
            , #{isdelete}
            , COALESCE(#{energy}, 0))
    </insert>

    <!-- 修改用户信息 -->
    <update id="updateUserInfo" parameterType="com.dailybaro.user.model.User">
        UPDATE user
        <set>
            <if test="account != null">account = #{account},</if>
            <if test="password != null">password = #{password},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="email != null">email = #{email},</if>
            <if test="status != null">status = #{status},</if>
            <if test="isdelete != null">isdelete = #{isdelete},</if>
            <if test="avatar != null">avatar = #{avatar},</if>
            <if test="wxOpenid != null">wx_openid = #{wxOpenid},</if>
            <if test="qqOpenid != null">qq_openid = #{qqOpenid},</if>
        </set>
        WHERE uid = #{uid}
    </update>


    <!-- 修改用户密码 -->
    <update id="updateUserPassword" parameterType="java.lang.Object">
        UPDATE user
        SET password = #{newPassword}
        WHERE uid = #{uid}
    </update>
</mapper> 