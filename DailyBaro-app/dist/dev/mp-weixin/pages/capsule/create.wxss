
.create-container.data-v-6d28ee0e {
	min-height: 100vh;
	background: linear-gradient(135deg, #4a90e2 0%, #6aa8ff 100%);
}

/* 添加导航栏样式 */
.nav-bar.data-v-6d28ee0e {
	background: rgba(255, 255, 255, 0.95);
	backdrop-filter: blur(20rpx);
	padding: 30rpx 40rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	border-bottom: 1rpx solid rgba(226, 232, 240, 0.8);
	position: sticky;
	top: 0;
	z-index: 100;
	box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}
.back-btn.data-v-6d28ee0e {
	width: 60rpx;
	height: 60rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 50%;
	background: rgba(99, 102, 241, 0.1);
	transition: all 0.3s ease;
}
.back-btn.data-v-6d28ee0e:active {
	background: rgba(99, 102, 241, 0.2);
	transform: scale(0.95);
}
.back-icon.data-v-6d28ee0e {
	font-size: 36rpx;
	color: #4a90e2;
	font-weight: 600;
}
.page-title.data-v-6d28ee0e {
	font-size: 32rpx;
	font-weight: 700;
	color: #1f2937;
}
.placeholder.data-v-6d28ee0e {
	width: 60rpx;
}
.content.data-v-6d28ee0e {
	padding: 30rpx;
	padding-bottom: 120rpx;
}

/* 胶囊内容输入 */
.input-section.data-v-6d28ee0e {
	margin-bottom: 30rpx;
}
.capsule-input.data-v-6d28ee0e {
	width: 100%;
	min-height: 200rpx;
	background: rgba(255, 255, 255, 0.95);
	border: 1rpx solid rgba(255, 255, 255, 0.3);
	border-radius: 20rpx;
	padding: 30rpx;
	font-size: 28rpx;
	line-height: 1.6;
	color: #1f2937;
	box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}
.char-count.data-v-6d28ee0e {
	text-align: right;
	font-size: 24rpx;
	color: rgba(255, 255, 255, 0.8);
	margin-top: 10rpx;
	display: block;
}

/* 时间设置 */
.time-section.data-v-6d28ee0e {
	margin-bottom: 30rpx;
}
.section-title.data-v-6d28ee0e {
	font-size: 32rpx;
	font-weight: 700;
	color: #ffffff;
	margin-bottom: 20rpx;
	text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}
.time-picker.data-v-6d28ee0e {
	background: rgba(255, 255, 255, 0.95);
	border-radius: 20rpx;
	padding: 30rpx;
	box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}
.date-picker.data-v-6d28ee0e {
	margin-bottom: 25rpx;
}
.picker-label.data-v-6d28ee0e {
	font-size: 26rpx;
	font-weight: 600;
	color: #1f2937;
	margin-bottom: 15rpx;
	display: block;
}
.picker-field.data-v-6d28ee0e {
	display: flex;
	align-items: center;
	justify-content: space-between;
	background: #f9fafb;
	border: 1rpx solid #e5e7eb;
	border-radius: 12rpx;
	padding: 20rpx;
}
.picker-text.data-v-6d28ee0e {
	font-size: 26rpx;
	color: #1f2937;
}
.picker-arrow.data-v-6d28ee0e {
	font-size: 24rpx;
	color: #9ca3af;
}
.time-picker-row.data-v-6d28ee0e {
	display: flex;
	gap: 20rpx;
}
.time-picker-item.data-v-6d28ee0e {
	flex: 1;
}

/* 提醒设置 */
.reminder-section.data-v-6d28ee0e {
	margin-bottom: 30rpx;
}
.reminder-options.data-v-6d28ee0e {
	background: rgba(255, 255, 255, 0.95);
	border-radius: 20rpx;
	padding: 30rpx;
	box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}
.reminder-item.data-v-6d28ee0e {
	display: flex;
	align-items: center;
	padding: 20rpx;
	background: #f9fafb;
	border-radius: 16rpx;
	border: 2rpx solid transparent;
	transition: all 0.3s ease;
}
.reminder-item.active.data-v-6d28ee0e {
	background: #e0f2fe;
	border-color: #0ea5e9;
}
.reminder-icon.data-v-6d28ee0e {
	font-size: 32rpx;
	margin-right: 15rpx;
}
.reminder-text.data-v-6d28ee0e {
	flex: 1;
	font-size: 26rpx;
	color: #1f2937;
	font-weight: 500;
}
.reminder-status.data-v-6d28ee0e {
	font-size: 22rpx;
	color: #64748b;
}

/* 操作按钮 */
.action-section.data-v-6d28ee0e {
	margin-bottom: 30rpx;
}
.create-btn.data-v-6d28ee0e {
	width: 100%;
	background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
	color: #ffffff;
	border: none;
	border-radius: 16rpx;
	padding: 25rpx;
	font-size: 30rpx;
	font-weight: 600;
	box-shadow: 0 4rpx 16rpx rgba(245, 158, 11, 0.3);
	transition: all 0.3s ease;
}
.create-btn.data-v-6d28ee0e:active {
	transform: translateY(2rpx);
	box-shadow: 0 2rpx 8rpx rgba(245, 158, 11, 0.4);
}
.create-btn.data-v-6d28ee0e:disabled {
	background: #9ca3af;
	box-shadow: none;
}
