}
.add-btn.data-v-ebf65a3f:active {
	transform: translateY(2rpx);
	box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.4);
}
.add-icon.data-v-ebf65a3f {
	color: white;
