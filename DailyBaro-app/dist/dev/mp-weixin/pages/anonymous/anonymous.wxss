
.anonymous-container.data-v-34fd0416 {
	min-height: 100vh;
	background: linear-gradient(135deg, #4a90e2 0%, #6aa8ff 100%);
}

/* 移除了导航栏样式 */

/* 内容区域 */
.content.data-v-34fd0416 {
	padding: 20rpx 40rpx;
}

/* 发布动态按钮 */
.post-section.data-v-34fd0416 {
	padding: 20rpx 0;
	margin-bottom: 30rpx;
}
.post-action-btn.data-v-34fd0416 {
	width: 100%;
	background: linear-gradient(135deg, #4a90e2, #6aa8ff);
	color: #ffffff;
	border: none;
	border-radius: 20rpx;
	padding: 25rpx 40rpx;
	font-size: 28rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	gap: 15rpx;
	box-shadow: 0 6rpx 24rpx rgba(99, 102, 241, 0.3);
	transition: all 0.3s ease;
}
.post-action-btn.data-v-34fd0416:active {
	transform: translateY(2rpx);
	box-shadow: 0 3rpx 12rpx rgba(99, 102, 241, 0.4);
}
.post-action-icon.data-v-34fd0416 {
	font-size: 28rpx;
}
.post-action-text.data-v-34fd0416 {
	font-size: 28rpx;
	font-weight: 600;
}

/* 动态列表 */
.posts-list.data-v-34fd0416 {
	display: flex;
	flex-direction: column;
	gap: 20rpx;
}
.post-item.data-v-34fd0416 {
	background: #ffffff;
	border-radius: 20rpx;
	padding: 30rpx;
	box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
	transition: all 0.3s ease;
}
.post-item.data-v-34fd0416:active {
	transform: translateY(2rpx);
	box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.12);
}
.post-header.data-v-34fd0416 {
	display: flex;
	align-items: center;
	gap: 20rpx;
	margin-bottom: 20rpx;
}
.post-avatar.data-v-34fd0416 {
	width: 60rpx;
	height: 60rpx;
	background: #f3f4f6;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	border: 2rpx solid rgba(99, 102, 241, 0.2);
}
.avatar-text.data-v-34fd0416 {
	font-size: 28rpx;
	color: #4a90e2;
}
.post-info.data-v-34fd0416 {
	display: flex;
	flex-direction: column;
	gap: 5rpx;
}
.post-nickname.data-v-34fd0416 {
	font-size: 26rpx;
	font-weight: 600;
	color: #1f2937;
}
.post-time.data-v-34fd0416 {
	font-size: 22rpx;
	color: #9ca3af;
}
.post-content.data-v-34fd0416 {
	margin-bottom: 20rpx;
}
.post-text.data-v-34fd0416 {
	font-size: 28rpx;
	color: #374151;
	line-height: 1.5;
}
.post-footer.data-v-34fd0416 {
	display: flex;
	justify-content: flex-end;
}
.post-actions.data-v-34fd0416 {
	display: flex;
	gap: 30rpx;
}
.action-item.data-v-34fd0416 {
	display: flex;
	align-items: center;
	gap: 8rpx;
	padding: 10rpx 16rpx;
	border-radius: 20rpx;
	background: rgba(99, 102, 241, 0.05);
	transition: all 0.3s ease;
}
.action-item.data-v-34fd0416:active {
	background: rgba(99, 102, 241, 0.1);
	transform: scale(0.95);
}
.action-icon.data-v-34fd0416 {
	font-size: 24rpx;
}
.action-text.data-v-34fd0416 {
	font-size: 24rpx;
	color: #6b7280;
	font-weight: 500;
}

/* 空状态 */
.empty-state.data-v-34fd0416 {
	text-align: center;
	padding: 80rpx 40rpx;
	background: #ffffff;
	border-radius: 20rpx;
	box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}
.empty-icon.data-v-34fd0416 {
	font-size: 80rpx;
	margin-bottom: 20rpx;
	display: block;
}
.empty-text.data-v-34fd0416 {
	font-size: 28rpx;
	color: #6b7280;
	margin-bottom: 30rpx;
	display: block;
}
.empty-btn.data-v-34fd0416 {
	background: linear-gradient(135deg, #4a90e2, #6aa8ff);
	color: #ffffff;
	border: none;
	border-radius: 16rpx;
	padding: 20rpx 40rpx;
	font-size: 26rpx;
	font-weight: 600;
	box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.3);
	transition: all 0.3s ease;
}
.empty-btn.data-v-34fd0416:active {
	transform: translateY(2rpx);
	box-shadow: 0 2rpx 8rpx rgba(99, 102, 241, 0.4);
}
