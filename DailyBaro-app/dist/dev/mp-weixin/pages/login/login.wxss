
.login-container.data-v-cdfe2409 {
	min-height: 100vh;
	position: relative;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	padding: 0 60rpx;
	box-sizing: border-box;
	animation: fadeIn-cdfe2409 0.8s ease-out;
	background-color: #ffffff;
}
.bg-image.data-v-cdfe2409 {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	z-index: 0;
	pointer-events: none;
}
@keyframes fadeIn-cdfe2409 {
from {
		opacity: 0;
		transform: translateY(30rpx);
}
to {
		opacity: 1;
		transform: translateY(0);
}
}
.login-content.data-v-cdfe2409 {
	width: 100%;
	max-width: 600rpx;
	position: relative;
	z-index: 1;
	animation: slideUp-cdfe2409 0.3s ease-out 0.1s both;
}
@keyframes slideUp-cdfe2409 {
from {
		opacity: 0;
		transform: translateY(20rpx);
}
to {
		opacity: 1;
		transform: translateY(0);
}
}
.logo-section.data-v-cdfe2409 {
	text-align: center;
	margin-bottom: 80rpx;
	animation: fadeIn-cdfe2409 0.4s ease-out 0.2s both;
}
@keyframes fadeIn-cdfe2409 {
from {
		opacity: 0;
}
to {
		opacity: 1;
}
}
.logo-wrapper.data-v-cdfe2409 {
	position: relative;
	display: inline-block;
	margin-bottom: 24rpx;
	/* 移除浮动动画，弱化效果 */
}
.logo-icon.data-v-cdfe2409 {
	width: 170rpx;
	height: 170rpx;
	border-radius: 50rpx;
	/* 日记本样式边框 */
	border: 4rpx solid rgba(255, 255, 255, 0.6);
	box-shadow: 
		0 0 0 1rpx rgba(139, 69, 19, 0.15),
		0 8rpx 24rpx rgba(0, 0, 0, 0.15),
		inset 0 0 20rpx rgba(255, 255, 255, 0.05);
	display: block;
	position: relative;
	z-index: 1;
}

/* 日记本装订线效果 */
.diary-binding.data-v-cdfe2409 {
	position: absolute;
	left: 0;
	top: 0;
	width: 12rpx;
	height: 100%;
	background: linear-gradient(to right,
		rgba(139, 69, 19, 0.4) 0%,
		rgba(139, 69, 19, 0.2) 50%,
		rgba(139, 69, 19, 0.4) 100%
	);
	border-radius: 50rpx 0 0 50rpx;
	z-index: 2;
	pointer-events: none;
}
@keyframes float-cdfe2409 {
0%, 100% {
		transform: translateY(0);
}
50% {
		transform: translateY(-10rpx);
}
}
.app-name.data-v-cdfe2409 {
	font-size: 52rpx;
	font-weight: 700;
	color: #ffffff;
	display: block;
	margin-bottom: 12rpx;
}
.app-slogan.data-v-cdfe2409 {
	font-size: 30rpx;
	color: rgba(255, 255, 255, 0.8);
	display: block;
}
.form-section.data-v-cdfe2409 {
	background: rgba(255, 255, 255, 0.98);
	border-radius: 24rpx;
	padding: 60rpx 50rpx;
	box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
	backdrop-filter: blur(5rpx);
	animation: slideInUp-cdfe2409 0.3s ease-out 0.3s both;
}
@keyframes slideInUp-cdfe2409 {
from {
		opacity: 0;
		transform: translateY(20rpx);
}
to {
		opacity: 1;
		transform: translateY(0);
}
}
.input-group.data-v-cdfe2409 {
	margin-bottom: 32rpx;
}
.input-field.data-v-cdfe2409 {
	width: 100%;
	background: #f8fafc;
	border: 2rpx solid #e2e8f0;
	border-radius: 14rpx;
	padding: 24rpx 20rpx;
	font-size: 30rpx;
	color: #1f2937;
	transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	box-sizing: border-box;
	line-height: 1.2;
	height: 80rpx;
	display: flex;
	align-items: center;
}
.input-field.data-v-cdfe2409::-moz-placeholder {
	color: #9ca3af;
	font-size: 30rpx;
	line-height: 1.2;
}
.input-field.data-v-cdfe2409::placeholder {
	color: #9ca3af;
	font-size: 30rpx;
	line-height: 1.2;
}
.input-field.focused.data-v-cdfe2409 {
	border-color: #4a90e2;
	background: #ffffff;
	box-shadow: 0 0 0 4rpx rgba(99, 102, 241, 0.15);
	transform: translateY(-2rpx);
}
.login-btn.data-v-cdfe2409 {
	width: 100%;
	/* 按钮背景色改为与背景图接近的蓝色 */
	background: #4a90e2;
	color: #ffffff;
	border: none;
	border-radius: 12rpx;
	padding: 18rpx;
	font-size: 26rpx;
	font-weight: 600;
	margin-bottom: 36rpx;
	box-shadow: 0 6rpx 20rpx rgba(99, 102, 241, 0.25);
	transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	position: relative;
	overflow: hidden;
}
.login-btn.data-v-cdfe2409:disabled {
	opacity: 0.6;
	transform: none;
}
.login-btn.data-v-cdfe2409::before {
	content: '';
	position: absolute;
	top: 0;
	left: -100%;
	width: 100%;
	height: 100%;
	background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
	transition: left 0.5s;
}
.login-btn.data-v-cdfe2409:active:not(:disabled) {
	transform: translateY(2rpx);
	box-shadow: 0 3rpx 10rpx rgba(99, 102, 241, 0.35);
}
.login-btn.data-v-cdfe2409:active:not(:disabled)::before {
	left: 100%;
}
.wechat-login-section.data-v-cdfe2409 {
	text-align: center;
	animation: fadeIn-cdfe2409 0.3s ease-out 0.4s both;
}
.wechat-login-text.data-v-cdfe2409 {
	color: #10b981;
	font-size: 28rpx;
	font-weight: 500;
	text-decoration: underline;
	transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	position: relative;
}
.wechat-login-text.data-v-cdfe2409::after {
	content: '';
	position: absolute;
	bottom: -2rpx;
	left: 0;
	width: 0;
	height: 2rpx;
	background: #10b981;
	transition: width 0.3s ease;
}
.wechat-login-text.data-v-cdfe2409:active:not(.disabled) {
	color: #059669;
	transform: scale(0.98);
}
.wechat-login-text.data-v-cdfe2409:active:not(.disabled)::after {
	width: 100%;
}
.wechat-login-text.disabled.data-v-cdfe2409 {
	opacity: 0.6;
	pointer-events: none;
}
