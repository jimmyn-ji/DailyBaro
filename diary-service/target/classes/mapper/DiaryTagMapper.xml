<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dailybaro.diary.mapper.DiaryTagMapper">
    <select id="findDiaryIdsByTagNames" resultType="java.lang.Long">
        SELECT DISTINCT dt.diary_id
        FROM diary_tags dt
        JOIN tags t ON dt.tag_id = t.tag_id
        WHERE t.tag_name IN
        <foreach collection="tagNames" item="tagName" open="(" separator="," close=")">
            #{tagName}
        </foreach>
    </select>
    
    <select id="findDiaryIdsByTagIds" resultType="java.lang.Long">
        SELECT DISTINCT dt.diary_id
        FROM diary_tags dt
        WHERE dt.tag_id IN
        <foreach collection="tagIds" item="tagId" open="(" separator="," close=")">
            #{tagId}
        </foreach>
    </select>
    
    <delete id="deleteByDiaryId">
        DELETE FROM diary_tags WHERE diary_id = #{diaryId}
    </delete>
    
    <insert id="batchInsert" parameterType="java.util.List">
        INSERT INTO diary_tags (diary_id, tag_id) VALUES
        <foreach collection="diaryTags" item="diaryTag" separator=",">
            (#{diaryTag.diaryId}, #{diaryTag.tagId})
        </foreach>
    </insert>
</mapper> 